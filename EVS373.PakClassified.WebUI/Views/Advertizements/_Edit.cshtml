@model AdvertizementModel


    <form asp-controller="advertizements" asp-action="edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-prepend">
                    <label for="loginid" class="input-group-text">
                        <i class="fa fa-edit"></i>
                    </label>
                </span>
                <input asp-for="Name" type="text" class="form-control" placeholder="Name" required="required" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-prepend">
                    <label for="description" class="input-group-text">
                        <i class="fa fa-edit"></i>
                    </label>
                </span>
                <input asp-for="Description" type="text" class="form-control" placeholder="Description" required="required" maxlength="100" />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-prepend">
                    <label for="description" class="input-group-text">
                        <i class="fa fa-edit"></i>
                    </label>
                </span>
                <input asp-for="Price" type="text" class="form-control" placeholder="Price" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="input-group">

                <img class=" img-fluid" src="data:image/jpg;base64,@Model.Images.First()" alt="card image">
            </div>
        </div>

        

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-circle-right"></i>  Save</button>
            <button type="button" class="btn btn-outline-primary" data-dismiss="modal"><i class="fa fa-arrow-circle-left"></i>  Cancel</button>
        </div>
    </form>




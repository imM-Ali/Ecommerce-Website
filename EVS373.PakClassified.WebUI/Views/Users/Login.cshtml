@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    int counter =Convert.ToInt32(ViewData[Constants.LOGIN_ATTEMPTS]);
    string returnUrl =Convert.ToString(ViewData["ReturnUrl"]);
}

<div class="container-fluid">
    <div class="row">
        <div class="offset-4 col-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <strong><i class="fa fa-sign-in"></i>  Login</strong>

                </div>
                <div class="card-body">
                    @if (counter > 0)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <span class="close">&times;</span>
                            <i class="fa fa-exclamation-triangle"></i> <span>Attempt#@counter: Invalid Login Id or Password</span>
                        </div>
                    }
                    <form action="/users/login?rurl=@returnUrl" method="post">
                        <input name="Attempts" type="hidden" value="@counter" />
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="loginid" class="input-group-text"><i class="fa fa-user"></i> </label>
                                </div>
                                <input type="text" asp-for="LoginId" class="form-control" placeholder="Login Id" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <label for="password" class="input-group-text"><i class="fa fa-key"></i> </label>
                                </div>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-user"></i> Login</button>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label><input type="checkbox" asp-for="Remember" /> Remember me</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




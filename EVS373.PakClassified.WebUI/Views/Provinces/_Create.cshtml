@model ProvinceModel
@{ 
    List<SelectListItem> countriesList =(List<SelectListItem>)ViewData["CountriesList"];
}

<form asp-controller="provinces" asp-action="create" method="post">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label for="loginid" class="input-group-text">
                    <i class="fa fa-edit"></i>
                </label>
            </span>
            <input asp-for="Name" type="text" class="form-control" placeholder="Name" required="required" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label for="password" class="input-group-text">
                    <i class="fa fa-map-marker"></i>
                </label>            
            </span>
            <select class="form-control" asp-items="@countriesList" asp-for="Country.Id"  >               
            </select>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-circle-right"></i>  Save</button>
        <button type="button" class="btn btn-outline-primary" data-dismiss="modal"><i class="fa fa-refresh"></i>  Cancel</button>
    </div>
</form>
